<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temirlan Kurmanbek"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#322933"
        android:layout_margin="15dp"
        android:background="#ffd700" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the website of Temirlan!"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="#244388" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/img" />

    <Button
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#244388"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:backgroundTint="#c1440e"
        android:text="View my brief Bio" />
    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:backgroundTint="#c1440e"
        android:text="View my profile" />
    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#132009"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:backgroundTint="#c1440e"
        android:text="Open camera" />

</LinearLayout>